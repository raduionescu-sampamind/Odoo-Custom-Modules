<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- course form view -->
        <record id="course_form_view" model="ir.ui.view">
            <field name="name">Course Form View</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <form string="Course">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="level"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- course tree view -->
        <record id="course_tree_view" model="ir.ui.view">
            <field name="name">Course Tree View</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <tree string="Course">
                    <field name="name"/>
                    <field name="level"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- course action: window -->
        <record id="course_action_window" model="ir.actions.act_window">
            <field name="name">Courses List</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- root menu -->
        <menuitem name="Odoo Academy"
                  id="odoo_academy.academy_root"
                  sequence="1"/>

        <!-- academy menu -->
        <menuitem name="Academy"
                  id="odoo_academy.course_menu"
                  parent="odoo_academy.academy_root"
                  sequence="2"/>
        <!-- course menu -->
        <menuitem name="Courses"
                  id="odoo_academy.course_list_menu"
                  parent="odoo_academy.course_menu"
                  action="course_action_window"
                  sequence="3"/>

    </data>
</odoo>